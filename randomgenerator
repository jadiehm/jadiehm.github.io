        if(window.focus) { wnd.focus(); }
        return false;
      };
      document.querySelector('#button_google').onclick = function() {
        var url = window.location.href;
        var wnd = window.open('https://plus.google.com/share?url=' + encodeURIComponent(url), '', 'height=480,width=640');
        if(window.focus) { wnd.focus(); }
        return false;
      };

      var JargonGen = (function () {

        // Private
        var _createRandNumBetween = function(min,max) {
            return Math.floor(Math.random()*(max-min+1)+min);
        };
        var _capitalizeFirstLetter = function(string) {
            return string.charAt(0).toUpperCase() + string.slice(1);
        };

        // Public
        var populate = function(container) {
          document.querySelector(container)
            .innerHTML = '<p>' 
              + this.randomParagraph(bs, this.randomSentence) 
              + '</p>';
        };
        var randomSentence = function(ogArray) {
          var randomizedWords = [],
              randomLength    = _createRandNumBetween(3, 7),
              arr             = ogArray.slice(0);

          for(var i = 0; i < randomLength; i++) {
            var randomNum      = Math.floor(Math.random() * arr.length);
            randomizedWords[i] = (i === 0) ? _capitalizeFirstLetter(arr[randomNum]) : arr[randomNum];
            arr.splice(randomNum, 1);                
          }
          return randomizedWords.join(' ') + '.';
        };
        var randomParagraph = function(ogArray, cb) { 
          var randomLength = _createRandNumBetween(6, 12),
              a            = [],
              t            = ogArray.slice(0);

          for(var i=0; i < randomLength; i++) {
            a[i] = cb(ogArray);
          }
          return a.join(' ');
        };
        
        return {
          populate        : populate,
          randomSentence  : randomSentence,
          randomParagraph : randomParagraph
        };

      })();

      //Populate container on load
      JargonGen.populate('#trump_jargon');

      //Refresh container when button clicked
      document.querySelector('#trump_textGen').onclick = function() {
        JargonGen.populate('#trump_jargon');
      }
    </script>
  </body>
</html>
